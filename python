
i = 1
while i <= 1:
    print(" " * i + "p")
    i = i + 1
while i <= 2:
    print(" " * i + "y")
    i = i + 1
while i <= 3:
    print(" " * i + "t")
    i = i + 1
while i <= 4:
    print(" " * i + "h")
    i = i + 1
while i <= 5:
    print(" " * i + "o")
    i = i + 1
while i <= 6:
    print(" " * i + "n")
    i = i + 1

