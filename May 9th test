year = int(input("How long have you worked for our company?"))
salary = int(input(" How much salary do you get per a year?"))
bonus = 0.05 * salary

year >= 5
if year >= 5:
    print("your bonus is")
    print(bonus)

else:
    print("employee who work for our company less than 4 years can't get bonus")

